<configuration>

    <!-- Appender pre rotujúce logy do súborov -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Súčasný (aktuálny) súbor s logmi -->
        <file>logs/server.log</file>

        <!-- Politika rotácie logov založená na čase (napr. 1 deň) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Šablóna pre mená log súborov (napr. server.2025-03-24.log) -->
            <fileNamePattern>logs/server.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- Koľko dní logy uchovávať (napr. 30 dní) -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <!-- Vzor pre výstup logu -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender pre výstup na konzolu -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Nastavenie úrovne logovania pre Jetty lebo príliš spamuje -->
    <logger name="org.eclipse.jetty" level="WARN" />

    <!-- Root logger na INFO, používa FILE a CONSOLE -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
